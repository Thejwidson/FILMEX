@using FILMEX.Models
@model List<UserRolesManagement>
@{
    ViewData["Title"] = "ManageUsersRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User / @Model.FirstOrDefault().UserID
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleID" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input type="hidden" asp-for="@Model[i].UserID" />
                    <input asp-for="@Model[i].SelectedRole" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].SelectedRole">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="UserRolesManagement" asp-route-id="@Model.FirstOrDefault()?.UserID" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>
